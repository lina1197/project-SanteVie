    <!-- Responsive table -->
    <div class="table-responsive">
        <table class="table m-0">
            <thead>
                <tr>
                    <th scope="col">patient_id</th>
                    <th scope="col">Name</th>
                    <th scope="col">gender</th>
                    <th scope="col">age</th>
                    <th scope="col">address</th>
                    <th scope="col">phone</th>
